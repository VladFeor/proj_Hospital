<h1>Pills</h1>
<form action="/pillSearch" method="get">
  <input type="text" name="q">
  <button class="btn_del block" type="submit">Search by Name</button>
  <a  href="/pills" type="submit">Reset search</a>
</form>
{{#if pills.length}}
{{#each pills}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-content">
          <h4 >{{dataValues.name}} </h4>
          <h5 >Reson: {{dataValues.reason}} </h5>
        </div>
        <form  class="card-action" method="POST" action="/pill/{{dataValues.id}}/delete">
        <button class="btn_del" type="submit"> Delete Pill</button>
        </form>
      </div>
    </div>
  </div>
{{/each}}
{{else}}
<h5>There are no pills here yet</h5>
{{/if}}

<div class="row addblock"> 
    <div class="col s6 offset-s3 ">
      <div class="card w500">
        <div class="card-content ">
          <h2>Add pill</h2>
  <div class="row">
    <form action="/pills" method="POST" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input  name="name" id="first_name" placeholder="  " type="text" class="validate">
          <label for="first_name" class="active">Name Pill</label>
        </div>
      </div>
      <div class="row">
        <label>Reason</label>
        <select  name="reason" class="browser-default" class="input-field col s12 validate" >
          <option value="" disabled selected>Choose your rank</option>
          <option value="Pain and inflammation" >Pain and inflammation</option>
          <option value="Infections" >Infections</option>
          <option value="Mental disorders" >Mental disorders</option>
          <option value="Cardiovascular diseases" >Cardiovascular diseases</option>
          <option value="Various other diseases and conditions" >Various other diseases and conditions</option>

        </select>
      </div>
      
      <button class="btn waves-effect waves-light" type="submit" name="action">Add pill
      <i class="material-icons right"></i>
    </button>

   


    </form>
  </div>
</div>
</div>
</div>


