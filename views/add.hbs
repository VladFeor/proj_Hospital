<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field col s6">
          <input id="title" name="title"  type="text" class="validate" required>
          <label for="title">Name Course</label>
          <span class="helper-text" data-error="Write name" data-success="right"></span>
    </div>

    <div class="input-field col s6">
          <input id="price" name="price" type="number" class="validate" required min="1">
          <label for="price">Price course</label>
          <span class="helper-text" data-error="Write price" data-success="right"></span>
    </div>

    <div class="input-field col s6">
          <input id="img" name="url" type="text" class="validate" required>
          <label for="img">URL img</label>
          <span class="helper-text" data-error="Write url" data-success="right"></span>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Add course
      <i class="material-icons right"></i>
    </button>
</form>